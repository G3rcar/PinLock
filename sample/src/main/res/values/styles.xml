<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PinLock" >
        <item name="pinLength">4</item>

        <item name="keypadButtonShape">?attr/selectableItemBackgroundBorderless</item>
        <item name="keypadTextColor">#000000</item>
        <item name="keypadTextSizeSp">20</item>
        <item name="keypadWidth">300dp</item>
        <item name="keypadHeight">280dp</item>
        <item name="keypadVerticalSpacing">8dp</item>
        <item name="keypadHorizontalSpacing">8dp</item>
        <item name="keypadClickAnimationDuration">500</item>

        <item name="cancelForgotTextColor">#000000</item>
        <item name="cancelForgotTextSizeSp">14</item>

        <item name="infoTextColor">#000000</item>
        <item name="infoTextSizeSp">24</item>

        <item name="vibrateOnClick">true</item>
        <item name="vibrateDuration">20</item>

        <item name="statusEmptyBackground">@drawable/dot_empty</item>
        <item name="statusFilledBackground">@drawable/dot_filled</item>
        <item name="statusDotDiameter">10dp</item>
        <item name="statusDotSpacing">10dp</item>

    </style>

</resources>
